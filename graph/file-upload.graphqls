type FileUpload {
    id: ID!
    filename: String!
    extension: String!
    size: Int!
    contentType: String!
    userId: ID!
}

input UpdateFile {
    id: ID!
    filename: String!
}

extend type Query {
    files: [FileUpload!]!
    download(id: ID!): String!
}

extend type Mutation {
    updateFile(input: UpdateFile): FileUpload!
    deleteFile(id: ID!): FileUpload!
    upload(files: [Upload!]!): Boolean!
}
